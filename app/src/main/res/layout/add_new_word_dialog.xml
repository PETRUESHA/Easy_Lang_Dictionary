<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/entryButton2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_2"
        android:src="@drawable/arrow_right"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextTranslate"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="@+id/group_38"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/group_38"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/boarder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/group_39"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:background="@drawable/boarder"
        app:layout_constraintStart_toEndOf="@+id/group_38"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextWord"
        style="@style/r14"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:backgroundTint="@android:color/transparent"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/enter_word"
        android:inputType="text"
        android:textColorHighlight="@color/subTitle"
        android:textColorHint="@color/p"
        app:layout_constraintEnd_toEndOf="@+id/group_38"
        app:layout_constraintStart_toStartOf="@+id/group_38"
        app:layout_constraintTop_toTopOf="@+id/group_38" />

    <EditText
        android:id="@+id/editTextTextTranslate"
        style="@style/r14"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:backgroundTint="@android:color/transparent"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/enter_translate"
        android:inputType="text"
        android:textColorHighlight="@color/subTitle"
        android:textColorHint="@color/p"
        app:layout_constraintEnd_toEndOf="@+id/group_39"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/group_39"
        app:layout_constraintTop_toTopOf="@+id/group_39" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.49878347" />
</androidx.constraintlayout.widget.ConstraintLayout>