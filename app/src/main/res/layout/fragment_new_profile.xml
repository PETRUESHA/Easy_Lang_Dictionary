<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".fragments_MainActivity.NewProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/scrollingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/image_4" />

            <TextView
                android:id="@+id/textView4"
                style="@style/r18"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/name" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayoutCompat2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/name_icon" />

                <View
                    android:id="@+id/group_1"
                    android:layout_width="320dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/rectangle_5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.6" />

                <EditText
                    style="@style/r16"
                    android:id="@+id/editTextTextName"
                    android:layout_width="305dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@android:color/transparent"
                    android:ems="10"
                    android:hint="@string/enter_your_name"
                    android:inputType="textCapWords"
                    android:textColorHighlight="@color/subTitle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/group_1"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/group_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView"
                style="@style/r18"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/surname" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/name_icon" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/group_2"
                        android:layout_width="320dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/rectangle_5"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        style="@style/r16"
                        android:id="@+id/editTextTextSurname"
                        android:layout_width="305dp"
                        android:layout_height="40dp"
                        android:backgroundTint="@android:color/transparent"
                        android:ems="10"
                        android:hint="@string/enter_your_surname"
                        android:inputType="textCapWords"
                        android:textColorHighlight="@color/subTitle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/group_2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.appcompat.widget.LinearLayoutCompat>


            <TextView
                android:id="@+id/textView5"
                style="@style/r18"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/email" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/carbon_email" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/group_3"
                        android:layout_width="320dp"
                        android:layout_height="40dp"
                        android:background="@drawable/rectangle_5"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        style="@style/r16"
                        android:id="@+id/editTextTextEmail"
                        android:layout_width="305dp"
                        android:layout_height="40dp"
                        android:backgroundTint="@android:color/transparent"
                        android:ems="10"
                        android:hint="@string/enter_email"
                        android:inputType="textEmailAddress"
                        android:textColorHighlight="@color/subTitle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/group_3"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>



            <View
                android:id="@+id/line_10"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/line_10" />


            <TextView
                android:id="@+id/textView7"
                style="@style/r18"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/password" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/lock_open" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/group_5"
                        android:layout_width="320dp"
                        android:layout_height="40dp"
                        android:background="@drawable/rectangle_5"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        style="@style/r16"
                        android:id="@+id/editTextTextPassword"
                        android:layout_width="305dp"
                        android:layout_height="40dp"
                        android:backgroundTint="@android:color/transparent"
                        android:ems="10"
                        android:hint="@string/enter_password"
                        android:inputType="textPassword"
                        android:textColorHighlight="@color/subTitle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/group_5"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>


            <View
                android:id="@+id/line_11"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/line_10" />

            <TextView
                android:id="@+id/textView8"
                style="@style/r18"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="@string/language" />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/language_icon" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="165dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:background="@drawable/rectangle_3"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/textView9"
                style="@style/r18"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/level_of_language" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle_6"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <RadioButton
                    style="@style/r16"
                    android:id="@+id/radioButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:buttonTint="@color/pastel_red"
                    android:layout_weight="1"
                    android:text="@string/a1"/>
                <RadioButton
                    style="@style/r16"
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:buttonTint="@color/pastel_red"
                    android:layout_weight="1"
                    android:text="@string/a2"/>
                <RadioButton
                    style="@style/r16"
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:buttonTint="@color/pastel_red"
                    android:layout_weight="1"
                    android:text="@string/b1"/>
                <RadioButton
                    style="@style/r16"
                    android:id="@+id/radioButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:buttonTint="@color/pastel_red"
                    android:layout_weight="1"
                    android:text="@string/b2"/>
                <RadioButton
                    style="@style/r16"
                    android:id="@+id/radioButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:buttonTint="@color/pastel_red"
                    android:layout_weight="1"
                    android:text="@string/c1"/>
                <RadioButton
                    style="@style/r16"
                    android:id="@+id/radioButton6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:buttonTint="@color/pastel_red"
                    android:layout_weight="1"
                    android:text="@string/c2"/>
            </RadioGroup>

            <androidx.appcompat.widget.AppCompatButton
                style="@style/buttons"
                android:id="@+id/confirmButton"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:text="@string/confirm"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_1"/>

        </LinearLayout>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>